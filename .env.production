PORT=8080
NODE_ENV=production

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id-prod
FIREBASE_SERVICE_ACCOUNT_PATH=./src/config/your-firebase-adminsdk-prod.json

# API Security - Use strong production secrets (CHANGE THIS!)
JWT_SECRET=your_production_super_secure_jwt_secret_key_change_this_in_production

# Admin Configuration (CHANGE THIS!)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=ProductionAdmin@2024!

# Production specific settings
DEBUG=false
LOG_LEVEL=error
CORS_ORIGIN=https://yourdomain.com
SWAGGER_ENABLED=false

# Database settings
DB_TIMEOUT=10000
REQUEST_TIMEOUT=60000

# Security settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100